{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/system_design_parameter_def",
  "definitions": {
    "system_design_parameter_def": {
      "title": "System Design Parameter Schema",
      "description": "Definition of System Design Parameters. (Version 0.1)",
      "type": "object",
      "properties": {
        "buildings": {
          "title": "custom",
          "description": "Parameters for all or individual buildings.",
          "type": "object",
          "properties": {
            "default": {
              "$ref": "#/definitions/building_def"
            },
            "custom": {
              "description": "List of individual buildings and their custom parameters.",
              "type": "array",
              "items": {
                "$ref": "#/definitions/building_def"
              }
            }
          },
          "additionalProperties": false
        },
        "connectors": {
          "description": "Parameters related to the connections between objects.",
          "type": "object",
          "properties": {
            "default": {
              "$ref": "#/definitions/connector_def"
            }
          },
          "additionalProperties": false
        },
        "district_system": {
          "description": "Parameters associated with district systems.",
          "type": "object",
          "properties": {
            "default": {
              "$ref": "#/definitions/district_system_def"
            }
          },
          "additionalProperties": false
        },
        "topology": {
          "title": "defaults",
          "description": "Parameters associated with district topologies.",
          "type": "object",
          "properties": {
            "topology_parameters": {
              "description": "Description of topology style",
              "type": "string",
              "$ref": "#/definitions/topology_def"
            },
            "topology_optimization": {
              "description": "Perform topology optimization?",
              "type": "boolean"
            },
            "cost_function": {
              "description": "Cost function to use in topology optimization",
              "type": "string",
              "$ref": "#/definitions/cost_function_definition"
            },
            "optimization_approach": {
              "description": "Approach to use for topology optimization",
              "type": "string",
              "$ref": "#/definitions/optimization_definition"
            },
            "time_period": {
              "description": "Time horizon for topology optimization.This paramater is used only if LCC is used as the cost function.",
              "type": "integer"
            },
            "discount_rate": {
              "description": "Discount rate for topology optimization. This paramater is used only if LCC is used as the cost function.",
              "type": "integer"
            },
            "convergence_criteria": {
              "description": "Convergence criteria used to indicate to the optimization algorithm when to stop. This could represent a number of iterations.",
              "type": "integer"
            }
          },
          "dependencies": {
            "topology_optimization": [
              "cost_function",
              "optimization_approach",
              "time_period",
              "discount_rate",
              "convergence_criteria"
            ]
          },
          "additionalProperties": false
        },
        "ets": {
          "title": "defaults",
          "description": "Parameters associated with ets systems",
          "type": "object",
          "properties": {
            "ets_parameters": {
              "description": "some properties here",
              "type": "string"
            }
          },
          "dependencies": {
            "data_required": [
              "building_name"
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "topology_def": {
      "title": "defaults",
      "description": "Parameters associated with district topologies.",
      "type": "object",
      "properties": {
        "configuration": {
          "type": "string",
          "enum": [
            "Radial",
            "Ring",
            "Mesh",
            "Out and Back"
          ]
        }
      },
      "additionalProperties": false
    },
    "cost_function_definition": {
      "title": "defaults",
      "description": "Possible cost functions for the topology optimization problem",
      "type": "object",
      "properties": {
        "cost_function": {
          "type": "string",
          "enum": [
            "Energy",
            "Life Cycle Cost",
            "Carbon Emissions"
          ]
        }
      },
      "additionalProperties": false
    },
    "optimization_definition": {
      "title": "defaults",
      "description": "Optimization approach for the topology optimization problem",
      "type": "object",
      "properties": {
        "optimization_approach": {
          "type": "string",
          "enum": [
            "Black box",
            "Gradient-based"
          ]
        }
      },
      "additionalProperties": false
    },
    "building_def": {
      "description": "The default system parameters for all of the buildings. These can be overwritten on a building by building basis by setting values in objects in the array with the geojson_id defined.",
      "type": "object",
      "properties": {
        "geojson_id": {
          "description": "The GeoJSON ID as defined in the GeoJSON file. This is used to overwrite the default data for a specific building. This option is not used in the default section.",
          "type": "string"
        },
        "load_model": {
          "description": "Type of load model to use for the building.",
          "type": "string",
          "enum": [
            "rc",
            "ddm",
            "time_series",
            "spawn"
          ]
        },
        "load_model_parameters": {
          "type": "object",
          "properties": {
            "spawn": {
              "$ref": "#/definitions/spawn_model_parameters"
            },
            "rc": {
              "$ref": "#/definitions/rc_model_parameters"
            },
            "time_series": {
              "$ref": "#/definitions/time_series_model_parameters"
            }
          },
          "additionalProperties": false
        },
        "ets_model": {
          "description": "energy transfer station model, one side is connected with district water loops, and the other side is connected with building water loops ",
          "type": "string",
          "enum": [
            "None",
            "Indirect Heating and Cooling",
            "Direct Heating and Cooling"
          ]
        },
        "ets_model_parameters": {
          "type": "object",
          "properties": {
            "indirect": {
              "$ref": "#/definitions/ets_indirect_parameters"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "connector_def": {
      "description": "Parameters associated with the connectors in a district system.",
      "type": "object",
      "properties": {
        "pipe_diameter": {
          "description": "Pipe diameter. (inches)",
          "type": "number"
        },
        "pipe_insulation_rvalue": {
          "description": "Pipe insulation R-Value. (F-ft2-hr/Btu)",
          "type": "number"
        },
        "pipe_location": {
          "description": "Location of the pipe.",
          "type": "string",
          "enum": [
            "Tunnel",
            "Buried"
          ]
        },
        "pipe_material": {
          "description": "Pipe material (to be used for determining surface roughness) ",
          "type": "string",
          "enum": [
            "Plastic",
            "Steel"
          ]
        }
      },
      "additionalProperties": false
    },
    "district_system_def": {
      "description": "Parameters associated with the district system.",
      "type": "object",
      "properties": {
        "return_configuration": {
          "description": "Type of return configuration for the overall district system. MW - not really needed. Just use pipes with supply/return.",
          "type": "string",
          "enum": [
            "Direct Return",
            "Reverse Return"
          ]
        },
        "connection_configuration": {
          "description": "Type of connection of buildings to the loop",
          "type": "string",
          "enum": [
            "Series",
            "Parallel"
          ]
        }
      },
      "additionalProperties": false
    },
    "ets_indirect_parameters": {
      "description": "The parameters associated with the indirect energy transfer station.",
      "type": "object",
      "properties": {
        "Q_flow_nominal": {
          "description": "Nominal heat flow rate ( Watts )",
          "type": "number",
          "default": 10000
        },
        "HX_eta": {
          "description": "Heat exchanger efficiency",
          "type": "number",
          "default": 0.8
        },
        "nominal_mass_flow_dis": {
          "description": "District water nominal flow rate (kg/s).",
          "type": "number",
          "default": 10
        },
        "nominal_mass_flow_bui": {
          "description": "Building water nominal flow rate (kg/s).",
          "type": "number",
          "default": 10
        },
        "valve_PD": {
          "description": "Valve pressure drop (Pa)",
          "type": "number",
          "default": 6000
        },
        "HX_sec_PD": {
          "description": "Heat exchanger secondary side pressure drop (Pa)",
          "type": "number",
          "default": 500
        },
        "HX_pri_PD": {
          "description": "Heat exchanger primary side pressure drop (Pa)",
          "type": "number",
          "default": 500
        },
        "TDis_ChWS": {
          "description": "Chilled water supply temperature district side (K)",
          "type": "number",
          "default": 5+273.15
        },
        "TBui_ChWS": {
          "description": "Chilled water supply temperature building side (K)",
          "type": "number",
          "default": 7+273.15
        },
        "TDis_HWS": {
          "description": "Heating water supply temperature district side (K)",
          "type": "number",
          "default": 55+273.15
        },
        "TBui_HWS": {
          "description": "Heating water supply temperature building side (K)",
          "type": "number",
          "default": 50+273.15
        },
        "delTHW_Dis": {
          "description": "Heating water temperature differenceon on the district side ",
          "type": "number",
          "default": 20
        },
        "delTHW_Bui": {
          "description": "Design temperature differential on the building side",
          "type": "number",
          "default": 15
        },
        "delTChW_Bui": {
          "description": "Chilled water temperature difference on the building side",
          "type": "number",
          "default": 5
        },
        "delTChW_Dis": {
          "description": "Design temperature differential on the district side ",
          "type": "number",
          "default": 8
        }
      },
      "required": [
        "Q_flow_nominal",
        "HX_eta",
        "nominal_mass_flow_dis",
        "nominal_mass_flow_bui",
        "valve_PD",
        "HX_sec_PD",
        "HX_pri_PD",
        "TDis_ChWS",
        "TBui_ChWS",
        "TDis_HWS",
        "TBui_HWS",
        "delTHW_Dis",
        "delTHW_Bui",
        "delTChW_Bui",
        "delTChW_Dis"
      ]
    },
    "spawn_model_parameters": {
      "description": "Parameters associated with spawn models.",
      "type": "object",
      "properties": {
        "TSetCoo": {
          "description": "Cooling setpoint air temperature(K)",
          "type": "number",
          "default": 24+273.15
        },
        "TsetHea": {
          "description": "Heating setpoint air temperature(K)",
          "type": "number",
          "default": 20+273.15
        },
        "THW_S": {
          "description": "Heating water supply temperature(K)",
          "type": "number",
          "default": 40+273.15
        },
        "THW_R": {
          "description": "Heating water return temperature(K)",
          "type": "number",
          "default": 35+273.15
        },
        "TChW_S": {
          "description": "Chilled water supply temperature(K)",
          "type": "number",
          "default": 7+273.15
        },
        "TChW_R": {
          "description": "Chilled water return temperature(K)",
          "type": "number",
          "default": 12+273.15
        },
        "idf_filename": {
          "description": "Absolute path or relative path from location where file instance is saved.",
          "type": "string"
        },
        "epw_filename": {
          "description": "Absolute path or relative path from location where file instance is saved.",
          "type": "string"
        },
        "mos_weather_filename": {
          "description": "Absolute path or relative path from location where file instance is saved.",
          "type": "string"
        },
        "mos_wet_bulb_filename": {
          "description": "Absolute path or relative path from location where file instance is saved. This field is not currently used.",
          "type": "string"
        },
        "thermal_zone_names": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "idf_filename",
        "epw_filename",
        "mos_weather_filename",
        "thermal_zone_names",
        "TSetCoo",
        "TsetHea",
        "THW_S",
        "THW_R",
        "TChW_S",
        "TChW_R"
      ],
      "additionalProperties": false
    },
    "rc_model_parameters": {
      "description": "Parameters associated with RC models.",
      "type": "object",
      "properties": {
        "order": {
          "type": "integer",
          "enum": [
            1,
            2,
            3,
            4
          ],
          "default": 2
        },
        "mos_weather_filename": {
          "description": "Relative path from location where file instance is saved.",
          "type": "string"
        },
        "fraction_latent_person": {
          "description": "Fraction latent of sensible persons load (e.g., 0.8 = home, 1.25 = office)",
          "type": "number",
          "default": 1.25
        },
        "TSetCoo": {
          "description": "Cooling setpoint air temperature(K)",
          "type": "number",
          "default": 24+273.15
        },
        "TsetHea": {
          "description": "Heating setpoint air temperature(K)",
          "type": "number",
          "default": 20+273.15
        },
        "THW_S": {
          "description": "Heating water supply temperature(K)",
          "type": "number",
          "default": 40+273.15
        },
        "THW_R": {
          "description": "Heating water return temperature(K)",
          "type": "number",
          "default": 35+273.15
        },
        "TChW_S": {
          "description": "Chilled water supply temperature(K)",
          "type": "number",
          "default": 7+273.15
        },
        "TChW_R": {
          "description": "Chilled water return temperature(K)",
          "type": "number",
          "default": 12+273.15
        }

      },
      "required": [
        "mos_weather_filename",
        "TSetCoo",
        "TsetHea",
        "THW_S",
        "THW_R",
        "TChW_S",
        "TChW_R"
      ],
      "additionalProperties": false
    },
    "time_series_model_parameters": {
      "description": "Parameters associated with time series models.",
      "type": "object",
      "properties": {
        "filepath": {
          "type": "string"
        },
        "delTAirCoo": {
          "description": "Nominal cooling air temperature difference across the terminal unit heat exchanger",
          "type": "number",
          "default": 10
        },
        "delTAirHea": {
          "description": "Nominal heating air temperature difference across the terminal unit heat exchanger",
          "type": "number",
          "default": 18
        },
        "TSetCoo": {
          "description": "Cooling setpoint air temperature(K)",
          "type": "number",
          "default": 24+273.15
        },
        "TsetHea": {
          "description": "Heating setpoint air temperature(K)",
          "type": "number",
          "default": 20+273.15
        },
        "THW_S": {
          "description": "Heating water supply temperature(K)",
          "type": "number",
          "default": 40+273.15
        },
        "THW_R": {
          "description": "Heating water return temperature(K)",
          "type": "number",
          "default": 35+273.15
        },
        "TChW_S": {
          "description": "Chilled water supply temperature(K)",
          "type": "number",
          "default": 7+273.15
        },
        "TChW_R": {
          "description": "Chilled water return temperature(K)",
          "type": "number",
          "default": 12+273.15
        }

      },
      "required": [
        "filepath",
        "delTAirCoo",
        "delTAirHea",
        "TSetCoo",
        "TsetHea",
        "THW_S",
        "THW_R",
        "TChW_S",
        "TChW_R"
      ],
      "additionalProperties": false
    },
    "central_cooling_plant_parameters": {
      "description": "Central cooling plant with maximum number of two chillers. Parameters associated with the model",
      "type": "object",
      "properties": {
        "Q_flow_nominal": {
          "description": "Nominal district cooling load (Watts)",
          "type": "number",
          "default": 8000
        },
        "mCHW_flow_nominal": {
          "description": "Nominal chilled water mass flow rate (kg/s).",
          "type": "number",
          "default": 10
        },
        "mCW_flow_nominal": {
          "description": "Nominal condenser water mass flow rate (kg/s)",
          "type": "number",
          "default": 10
        },
        "dpCHW_nominal": {
          "description": "Nominal chilled water (evaporator) side pressure drop (Pa).",
          "type": "number",
          "default": 55000
        },
        "dpCW_nominal": {
          "description": "Nominal cooling water (condenser) side pressure drop (Pa).",
          "type": "number",
          "default": 80000
        },
        "dpSetPoi": {
          "description": "The Chilled water circuit pressure drop setpoint (Pa)",
          "type": "number",
          "default": 50000
        },
        "TCHWSet": {
          "description": "District circuit chilled water temperature setpoint (K)",
          "type": "number",
          "default": 5+273.15
        },
        "dpCHWPum_nominal": {
          "description": "Chiller isolation valve pressure drop(Pa)",
          "type": "number",
          "default": 6000
        },
        "dpCWPum_nominal": {
          "description": "Cooling tower isolation valve pressure drop(Pa)",
          "type": "number",
          "default": 6000
        }
      },
      "required": [
        "Q_flow_nominal",
        "mCHW_flow_nominal",
        "mCW_flow_nominal",
        "dpCHW_nominal",
        "dpCW_nominal",
        "dpSetPoi",
        "TCHWSet",
        "dpCHWPum_nominal",
        "dpCWPum_nominal"
      ]
    },
    "NewDefinition": {}
  }
}
